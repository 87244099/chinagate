<template name="productSearch">
  <view class="fk_productSearch">
    <mp-searchbar class="fk_productSearch_searchBar" placeholder="搜索产品" bindselectresult="selectResult" value="{{setting.inputWord}}" bindblur="searchBlur" bindclear="searchClear" cancel="{{false}}"></mp-searchbar>
    <view class="fk_productSearch_word">当前搜索词：{{setting.word}}</view>
    <view class="fk_productSearch_main">
      <view class="fk_productSearch_product_list">
        <navigator class="fk_productSearch_product_item" url="/pages/productDetail/productDetail?id={{item.productID}}&companyId={{pageData.companyPageData.companyInfo.merchantForLevelAID}}" wx:key="productID" wx:for="{{setting.productList}}">
          <view class="fk_productSearch_product_img">
            <image style="width:100%;height:100%" mode="" src="{{config.staticDomain}}/{{item.smallImgPath}}"></image>
          </view>
          <view class="fk_productSearch_product_name">{{item.title}}</view>
          <view class="fk_productSearch_product_priceInfo">
            <view class="fk_productSearch_product_priceInfo_line">
              <view class="fk_productSearch_product_priceInfo_label">普通批发价：</view>
              <view class="fk_productSearch_product_priceInfo_value">￥{{item.ordinaryWholesalePrice}}</view>
            </view>
            <view class="fk_productSearch_product_priceInfo_line">
              <view class="fk_productSearch_product_priceInfo_label">vip批发价：</view>
              <view class="fk_productSearch_product_priceInfo_value">￥{{item.vipWholesalePrice}}</view>
            </view>
          </view>
        </navigator>
      </view>
    </view>
  </view>
</template> 