/* components/tab-bar.wxss */
@import "../icons.wxss";

.fk_tabBar{
  display: flex;
  justify-content: space-between;
  align-items: center;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 100rpx;
  z-index: 1001;
  background-color: rgba(40,96,207);
  border-top: 1rpx solid #e7e7e7;
  /* border-bottom: 1px solid #f8f8f8; */
  box-sizing: border-box;
  color: #fff;
}
.fk_tabBar_item{
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex: 1;
}

.fk_tabBar_item_icon{
  font-size: 40rpx;
}
.fk_tabBar_item_text{
  font-size: 24rpx;
}


/* 名片导航 */

.fk_tabBar_card .fk_tabBar_item:first-child{
  background-color: #07c062;
}
.fk_tabBar_card .fk_tabBar_item{
  background-color: #fa5251;
  height: 100%;
  align-items: center;
}
.fk_tabBar_card .fk_tabBar_item_icon{
  font-size: 26rpx;
}

navigator{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100%;
  width: 100%;
  justify-content: center;
}

.fk_goTop{
  position: fixed;
  bottom: 154rpx;
  right: 20rpx;
  width: 88rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #ffffff;
  border: 2rpx solid #cccccc;
  color: #bbbbbb;
  z-index: 1000;
  font-size: 40rpx;
}