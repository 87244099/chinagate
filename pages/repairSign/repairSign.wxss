.fk_page{
  background-color: #ebebeb;
}
.fk_repairSign{
  padding: 20rpx;
  /* height: 100vh; */
  box-sizing: border-box;
  padding: 0 30rpx;
}
.fk_repairSign_form{
  background-color: #fff;
  border-radius: 10rpx;
  overflow: hidden;
  margin-top: -60rpx;
}
.van-field__label, .van-cell__title{
  width: 135rpx !important;
  min-width: 135rpx !important;
  max-width: 135rpx !important;
}
.fk_repairSign_button_wrap{
  padding: 40rpx 0;
  /* padding:  40rpx; */
}

.fk_repairSign .van-button--info{
  background-color: #0062d7;
}

.van-field__input--textarea{
  min-height: 200rpx;
  height: 200rpx !important;
}


.fk_van_field .van-cell{
  padding-left: 0;
  padding-right: 0;
  border-bottom: solid rgb(243, 243, 243) 1px;
}
.fk_van_field:last-child .van-cell{
  border-bottom: none;
} 
 .fk_van_field .van-field__label{
  color: #000;
}


.fk_repairSign .van-cell__title{
  width: 214rpx !important;
  min-width: 214rpx !important;
  max-width: 214rpx !important;
  box-sizing: border-box;
}
.fk_label{
  display: flex;
  align-items: flex-start;
}
.fk_repairSign_button{
  background-image: -moz-linear-gradient( 90deg, rgb(1,215,254) 0%, rgb(1,178,255) 100%);
  background-image: -webkit-linear-gradient( 90deg, rgb(1,215,254) 0%, rgb(1,178,255) 100%);
  background-image: -ms-linear-gradient( 90deg, rgb(1,215,254) 0%, rgb(1,178,255) 100%);
  width: 400rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  color: #fff;
  margin: 60rpx auto 0;
  display: block;
  border-radius: 35rpx;
  font-size: 32rpx;
}