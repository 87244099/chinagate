<view class="fk_page">
  <ui-banner cn="我需要维修" en="SUGGESTIONS"></ui-banner>

  <view class="fk_repairSign">
    <view class="fk_repairSign_form" style="padding:0 40rpx">
      <van-cell-group>
        <van-field
          label="您的姓名"
          value="{{setting.form.customerName}}"
          placeholder="请输入您的姓名"
          border="{{ false }}"
          class="fk_van_field"
          bind:blur="onFieldBlur"

          data-field="customerName"
        />
        <van-field
          label="您的手机"
          value="{{setting.form.customerTel}}"
          placeholder="请输入您的手机"
          border="{{ false }}"
          bind:blur="onFieldBlur"
          class="fk_van_field"
          data-field="customerTel"
        />
        <van-field
          label="您的地址"
          value="{{setting.form.address}}"
          placeholder="请输入您的地址"
          border="{{ false }}"
          bind:blur="onFieldBlur"
          class="fk_van_field"
          data-field="address"
        />
        <van-field
          value="{{ setting.form.leaveMessage }}"
          label="维修内容"
          type="textarea"
          placeholder="请填写需要维修的产品类型和故障描述"
          autosize
          border="{{ false }}"
          class="fk_van_field"
          data-field="leaveMessage"
          bind:blur="onFieldBlur"
        />
      </van-cell-group>
      <view class="fk_repairSign_button_wrap">
        <van-button type="info" size="small" block catchtap="onSubmitForm">确定提交</van-button>
      </view>
    </view>
    
  </view>
  <!-- <tab-bar class="fk_tabBar"></tab-bar> -->
  <van-toast id="van-toast" />
</view>