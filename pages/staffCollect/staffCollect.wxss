/* pages/staffCollect/staffCollect.wxss */
@import "/icons.wxss";

.fk_staffCollect{
  background-color: #f2f2f2;
  /* min-height: calc(100vh - 100rpx); */
}
.fk_staffCollect_list{
  min-height: calc(100vh - 54px);  
  background-color: #f2f2f2;
  overflow: hidden;
}

.fk_staffCollect_item{
  display: flex;
  padding: 50rpx 30rpx;
  background-color: #fff;
  padding: 30rpx;
  margin-top: 30rpx;
}
.fk_staffCollect_item{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
  flex-direction: row;
}
.fk_staffCollect_item_right{
  width: 30rpx;
  display: none;
}
.fk_staffCollect_item_left{
  flex: 1;
  display: flex;
}
.fk_staffCollect_item_img{
  width: 140rpx;
  height: 140rpx;
  /* margin-right: 25px; */
  border-radius: 50%;
  background-color: #999999;
  overflow: hidden;
}
.fk_staffCollect_item_info{
  flex: 1;
  padding-left: 50rpx;
}
.fk_staffCollect_item_info_name{
  font-size: 36rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 410rpx;
}
.fk_staffCollect_item_info_opt{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.fk_staffCollect_item_info_opt_icon{
  font-size: 32rpx;
  /* color: yellow; */
}
.fk_staffCollect_item_info_opt_text{
  font-size: 24rpx;
  padding-left: 6rpx;
}

.fk_staffCollect_item_right_icon::after{
  font-family: "iconfont" !important;
  content: "\e609";
  width: 30rpx;
  height: 100%;
  color: #8c8c8c;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  text-align: center;
  /* margin-right: 10px; */
}