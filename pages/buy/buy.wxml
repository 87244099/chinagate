<view class="fk_page">
  <view class="fk_buy">
    <view class="fk_buy_form">
      <van-cell-group>
        <van-field 
          class="fk_van_field"
          label="您的姓名"
          value="{{setting.form.customerName}}"
          placeholder="请输入您的姓名"
          border="{{ false }}"
          bind:blur="onFieldBlur"

          data-field="customerName"
          placeholder-style="color:rgb(128,128,128)"
        />
        <van-field 
          class="fk_van_field"
          label="您的手机"
          value="{{setting.form.customerTel}}"
          placeholder="请输入您的手机"
          border="{{ false }}"
          bind:blur="onFieldBlur"
          data-field="customerTel"
          placeholder-style="color:rgb(128,128,128)"

        />
        <van-field 
          class="fk_van_field"
          label="您的地址"
          value="{{setting.form.address}}"
          placeholder="请输入您的地址"
          border="{{ false }}"
          bind:blur="onFieldBlur"
          data-field="address"
          placeholder-style="color:rgb(128,128,128)"
        />
        <van-field 
          class="fk_van_field"
          value="{{ setting.form.leaveMessage }}"
          label="需求说明"
          type="textarea"
          placeholder="请输入购买产品的需求"
          border="{{ false }}"

          data-field="leaveMessage"
          bind:blur="onFieldBlur"
          placeholder-style="color:rgb(128,128,128)"
        />
      </van-cell-group>
      <view class="fk_buy_button_wrap">
        <van-button type="info" size="small" block catchtap="onSubmitForm">确定提交</van-button>
      </view>
    </view>
    
  </view>
  <tab-bar class="fk_tabBar"></tab-bar>
  <van-toast id="van-toast" />
</view>