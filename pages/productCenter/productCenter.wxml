<view class="fk_page" wx:if="{{setting.inited}}">
  
  <view class="fk_productCenter">
    <view class="fk_productCenter_header" catchtap="noop">
      <van-search
        style="background-color:{{pageData.companyPageData.companyInfo.themeColor}}"
        placeholder="请输入搜索关键词"
        bind:change="searchChange"
        use-action-slot
      >
        <view slot="action" bind:tap="doSearch" style="color:#fff;font-size:28rpx">搜索</view>
      </van-search>
      <!-- <mp-searchbar style="background-color:{{pageData.companyPageData.companyInfo.themeColor}}" bindselectresult="selectResult" bindblur="searchBlur" bindclear="searchClear" cancel="{{false}}"></mp-searchbar> -->
    </view>

    <view class="fk_productCenter_group" data-visible="{{setting.groupVisible}}">
      <view class="fk_productCenter_group_side">
        <view class="fk_productCenter_group_side_title" style="background-color:{{pageData.companyPageData.companyInfo.themeColor}}">
          产品分类
        </view>
        <scroll-view scroll-y="{{true}}" class="fk_productCenter_group_side_list">
          <view catchtap="onGroupTabClick" data-index="{{index}}" class="fk_productCenter_group_side_item" wx:for="{{pageData.productGroupList}}" wx:key="productTypeID" data-active="{{setting.tabIndex == index}}">
            <view class="fk_productCenter_group_side_item_text">{{item.productTypeName}}</view>
          </view>
        </scroll-view>
          
      </view>
      <view class="fk_productCenter_group_main">
        <view class="fk_productCenter_group_main_title" style="color:{{pageData.companyPageData.companyInfo.themeColor}}">
          <view style="padding-left:24rpx">产品列表</view>
          <view class="fk_toggleGroup" catchtap="toggleGroup" style="border-color:{{pageData.companyPageData.companyInfo.themeColor}};color:{{pageData.companyPageData.companyInfo.themeColor}}">{{setting.groupVisible?'隐藏分类':'显示分类'}}</view>
        </view>
        <scroll-view scroll-into-view="{{setting.scrollTopView}}" scroll-y class="fk_productCenter_group_main_content" bindscrolltolower="loadNextProducts">
          <view id="view-{{index}}" wx:for="{{pageData.productGroupList[setting.tabIndex].productList}}"></view>
          
          <view wx:if="{{setting.groupVisible}}" style="padding:20rpx;">
            <navigator url="/pages/productDetail/productDetail?id={{item.productID}}&companyAID={{setting.companyAID}}&companyBID={{setting.companyBID}}&staffID={{setting.staffID}}" class="fk_productCenter_group_main_content_product" open-type="redirect"  wx:key="productID" wx:for="{{pageData.productGroupList[setting.tabIndex].productList}}">
              <view class="fk_productCenter_group_main_content_product_img">
                <image style="width:100%;height:100%" lazy-load="{{true}}"  mode="aspectFill" src="{{config.staticDomain}}/{{item.smallImgPath}}" />
              </view>
              <view class="fk_productCenter_group_main_content_product_name">{{item.title}}</view>
            </navigator>
          </view>
          <view wx:else style="padding: 8px;">
            <view style="display: flex;align-items: center;flex-wrap: wrap;justify-content: space-between;background-color:#fff;padding: 20rpx 10rpx;">
              <product color="#969696" context="{{pageData}}" class="fk_indexStaff_productIntro_group_main_product_item fk_product_item" setting="{{setting}}" config="{{config}}" product="{{product}}" wx:for-item="product" wx:for="{{pageData.productGroupList[setting.tabIndex].productList}}" globalData="{{globalData}}"></product>
            </view>
          </view>
        </scroll-view>
      </view>
    </view>
  </view>

  <tab-bar class="fk_tabBar" type="company" companyInfo="{{pageData.companyPageData.companyInfo}}" companyAID="{{setting.companyAID}}" companyBID="{{setting.companyBID}}" staffID="{{setting.staffID}}" staffInfo="{{pageData.staffInfo}}" style="background-color:{{pageData.companyPageData.companyInfo.themeColor}}"></tab-bar>
</view>
  <van-toast id="van-toast" />
