/* pages/shareRank/shareRank.wxss */
.fk_rank_banner{
  height: 311rpx;
  margin-bottom: 33rpx;
  background: url(https://pf.86crk.com/Content/Images/rankTopBg.png);
  background-size: 750rpx 311rpx;
}
.fk_rank_tip{
  height: 30rpx;
  font-size: 30rpx;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #FFFFFF;
  margin-bottom: 33rpx;
  text-align: center;
}
.fk_rank{
  width: 631rpx;
  background: #FFFFFF;
  border-radius: 15rpx;
  margin: 0 auto;
  padding: 43rpx 32rpx;
  box-sizing: border-box;
  padding-bottom: 0;
}
.fk_rank_header{
  height: 104rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 9rpx 1rpx rgba(7, 1, 2, 0.18);
  border-radius: 10rpx;
  /* display: flex; */
  display: flex;
  flex-direction: column;
  justify-content: center;

  font-size: 30rpx;
  font-family: SourceHanSansCN;
  font-weight: bold;
  color: #0488FC;
  margin: 0 auto;
}
.fk_rank_table_head{
  padding-top: 72rpx;
}
.fk_rank_table_row{
  display: flex;
  align-items: center;
}
.fk_rank_table_row > view{
  text-align: center;
  font-size: 32rpx;
  color: #666666;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  padding:0 10rpx;
}

.fk_rank_table_row_num{
  flex: 1;
}
.fk_rank_table_row_count{
  flex: 2;
}
.fk_rank_table_row_name{
  flex: 1;
}
.fk_rank_header .fk_rank_table_row > view{
  text-align: center;
  font-size: 32rpx;
  color: #0488FC;
}
.fk_rank_table_head .fk_rank_table_row > view{
  text-align: center;
  font-size: 32rpx;
  color: #0488FC;
}
.fk_rank_table_head{
  font-weight: bold;
  color: rgb(4,135, 253);
}
.fk_rank_table_body .fk_rank_table_row:first-child{
  border-top: none;
}
.fk_rank_table_body .fk_rank_table_row{
    padding-top: 63rpx;padding-bottom: 31rpx;
    border-top: solid #E6E6E6 1rpx;
}

.fk_page{
  background-color: rgb(9, 133, 252);
  min-height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}
.fk_rank_table_row_num_text{
  width: 37rpx;
  height: 37rpx;
  background: #0488FC;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  line-height: 37rpx;
  display: inline-block;
}
