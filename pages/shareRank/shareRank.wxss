/* pages/shareRank/shareRank.wxss */
.fk_rank_banner{
  height: 346rpx;
  margin-bottom: 33rpx;
  /* background: url(https://pf.86crk.com/Content/Images/rankTopBg.png); */
  background-size: 750rpx 346rpx;
  padding-bottom: 0;
}
.fk_rank_tip{
  height: 30rpx;
  font-size: 30rpx;
  font-family: SourceHanSansCN;
  font-weight: 400;
  color: #FFFFFF;
  margin-bottom: 33rpx;
  text-align: center;
  display: none;
  border-top: 8px solid #ebebeb;
}
.fk_rank{
  /* width: 631rpx; */
  background: #FFFFFF;
  border-radius: 15rpx;
  /* margin: 0 auto; */
  /* padding: 0 32rpx; */
  box-sizing: border-box;
  overflow: hidden;
  min-height: 550rpx;
  padding: 20rpx 30rpx;
}
.fk_rank_content{
  padding: 43rpx 32rpx;
  padding-bottom: 0;
  padding-top: 0;
}
.fk_rank_header{
  height: 104rpx;
  background: #FFFFFF;
  box-shadow: 0px 0px 9rpx 1rpx rgba(7, 1, 2, 0.18);
  border-radius: 10rpx;
  /* display: flex; */
  display: flex;
  flex-direction: column;
  justify-content: center;

  font-size: 30rpx;
  font-family: SourceHanSansCN;
  font-weight: bold;
  color: #0062d7;
  margin: 0 auto;
  display: none;
}
.fk_rank_table_head{
  padding-top: 72rpx;
}
.fk_rank_table_row{
  display: flex;
  align-items: center;
}
.fk_rank_table_row > view{
  text-align: center;
  font-size: 30rpx;
  color: #929292;
  text-align: center;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
  box-sizing: border-box;
  padding:0 10rpx;
}

.fk_rank_table_row_num{
  flex: 1;
}
.fk_rank_table_row_count{
  flex: 2;
}
.fk_rank_table_row_name{
  flex: 1;
}
.fk_rank_header .fk_rank_table_row > view{
  text-align: center;
  font-size: 32rpx;
  color: #0062d7;
}
.fk_rank_table_head .fk_rank_table_row > view{
  text-align: center;
  font-size: 34rpx;
  color: #0062d7;
  font-weight: bolder;
}
.fk_rank_table_head{
  font-weight: bold;
  color: rgb(4,135, 253);
  padding: 40rpx 0;
}
.fk_rank_table_body .fk_rank_table_row:first-child{
  border-top: none;
}
.fk_rank_table_body .fk_rank_table_row{
  border-top: solid #E6E6E6 1rpx;
  padding: 20rpx 0;
  line-height: 1;
}

.fk_page{
  /* background-color: rgb(9, 133, 252); */
  min-height: 100vh;
  box-sizing: border-box;
  overflow: hidden;
}
.fk_rank_table_row_num_text{
  width: 37rpx;
  height: 37rpx;
  background: #0062d7;
  border-radius: 50%;
  text-align: center;
  color: #fff;
  line-height: 37rpx;
  display: inline-block;
}
.fk_rank_table_row_name{
}

.van-ellipsis{
  color: #000;
}

.publicTitle{
  text-align: center;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  line-height: 1;
}
.publicTitle .ch{
  font-size: 46rpx;
  color: #0062d7;
}
.publicTitle .ch:before {
  content: "—";
  margin-right: 30rpx;
}
.publicTitle .ch::after {
  content: "—";
  margin-left: 30rpx;
}