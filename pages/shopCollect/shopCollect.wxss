/* pages/shopCollect/shopCollect.wxss */
@import "/icons.wxss";

.fk_shopCollect{
  background-color: #f2f2f2;
  /* min-height: calc(100vh - 100rpx); */
}
.fk_shopCollect_list{
  padding-top: 30rpx;
  min-height: calc(100vh - 54px);
  background-color: #f2f2f2;
  box-sizing: border-box;
}
.fk_shopCollect_list .fk_shopCollect_item {
  height: auto;
}

.fk_shopCollect_item{
  display: flex;
  padding: 50rpx 30rpx;
  background-color: #fff;
}
.fk_shopCollect_item{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
  flex-direction: row;
  margin-bottom: 30rpx;
  padding: 30rpx;
}
.fk_shopCollect_item_right{
  width: 30rpx;
  display: none;
}
.fk_shopCollect_item_left{
  flex: 1;
  display: flex;
}
.fk_shopCollect_item_img{
  width: 140rpx;
  height: 140rpx;
  /* margin-right: 25px; */
  border-radius: 50%;
  background-color: #999999;
}
.fk_shopCollect_item_info{
  flex: 1;
  padding-left: 50rpx;
}
.fk_shopCollect_item_info_name{
  font-size: 36rpx;
  width: 400rpx;
}
.fk_shopCollect_item_info_opt{
  display: flex;
  align-items: center;
  max-width: 150rpx;
  line-height: 1;
}
.fk_shopCollect_item_info_opt_icon{
  font-size: 32rpx;
  /* color: yellow; */
}
.fk_shopCollect_item_info_opt_text{
  font-size: 24rpx;
  padding-left: 6rpx;
}

.fk_shopCollect_item_right_icon::after{
  font-family: "iconfont" !important;
  content: "\e609";
  width: 30rpx;
  height: 100%;
  color: #8c8c8c;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  text-align: center;
  /* margin-right: 10px; */
}