/* pages/productDetail/productDetail.wxss */
@import "/icons.wxss";

.fk_productDetail{
  background-color: #f5f5f5;
}
.fk_productDetail_banner{
  height: 346rpx;
}
.fk_productDetail_func_list{
  display: flex;
  justify-content: space-between;
  font-size: 32rpx;
  padding: 26rpx 40rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.fk_productDetail_func_item{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 120rpx;
}
.fk_productDetail_func_item_icon{
  display: block;
  width: 50rpx;
  height: 50rpx;
  font-size: 50rpx;
  line-height: 50rpx;
  text-align: center;
  background-color: #0062d7;
  padding: 26rpx;
  box-sizing: content-box;
  border-radius: 50%;
  color: #ececec;
}
.fk_productDetail_func_item_text{
  display: block;
  color: #8f8f8f;
  text-align: center;
  font-style: normal;
  margin-top: 10rpx;
  line-height: 1em;
}

.fk_productDetail_info{
  padding: 20rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.fk_productDetail_info_priceInfo{
  display: flex;
  font-size: 34rpx;
  align-items: center;
}
.fk_productDetail_info_priceInfo_normal,
.fk_productDetail_info_priceInfo_vip
{
  width: 33.3%;
  font-size: 30rpx;
  color: #FF0036;
}

.fk_productDetail_main{
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
}

.fk_productDetail_intro_title{
  border-left: 8rpx solid #0062d7;
  padding-left: 30rpx;
    font-size: 44rpx;
    color: #8f8f8f;
}

.wxparser--wxParser-inline{
  max-width: 100%;
  font-size: 32rpx;
}

.fk_productDetail_service_form{
  padding: 0 20rpx;
}
.fk_productDetail_service_form_line{
  display: flex;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #ebebeb;
  flex-wrap: wrap;
}
.fk_productDetail_service_form_label{
  min-width: 120rpx;
    margin-right: 30rpx;
}
.fk_productDetail_service_form_value{
  flex: 1;
}
textarea{
  width: 100%;
  height: 100rpx;
  padding-top: 10rpx;
}
.fk_productDetail_service_form_button{
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #fff;
  background-color: #0062d7;
  border-radius: 10rpx;
  font-size: 30rpx;
}
.fk_page{
  /* padding-bottom: 200rpx; */
}
.fk_artile_wxparse .wxparser--wxParser-p text {
  color: #444;
}

.fk_productDetail_intro_content{
  padding-top: 16rpx;
}