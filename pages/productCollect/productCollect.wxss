/* pages/productCollect/productCollect.wxss */


.fk_productSearch_product_list{
  display: flex;
  align-items: flex-start;
  flex-wrap: wrap;
}
.fk_productSearch_product_item{
  float: left;
  width: 50%;
  padding-left: 10rpx;
  padding-right: 10rpx;
  padding-top: 40rpx;
  overflow: hidden;
  padding-bottom: 8rpx;
  box-sizing: border-box;
}
.fk_productSearch_product_img{
  height: 212rpx;
  width: 100%;
  background: #ccc;
}
.fk_productSearch_product_name{
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  text-align: center;
  font-size: 28rpx;
  padding: 0 16rpx;
  padding-top: 10rpx;
  color: #333;
  text-align: center;
  font-size: 28rpx;
  padding-top: 10rpx;
  color: #333;
  width: 100%;
  box-sizing: border-box;
}
.fk_productSearch_product_priceInfo{
  padding-top: 8rpx;
  font-size: 26rpx;
  color: #ff5000;
  line-height: 1.2;
  width: 100%;
}
.fk_productSearch_product_priceInfo_line{
  display: flex;
  align-items: center;
}
.fk_productSearch_product_priceInfo_label{
  width: 172rpx;
  text-align: right;
}
.fk_productSearch_product_priceInfo_value{
  flex: 1;
}

.fk_productCollect_list{
  padding: 20rpx;
}