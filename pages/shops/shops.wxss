/* pages/shops/shops.wxss */
@import "/icons.wxss";
.fk_shop_list{
  padding-bottom: 100rpx;
  background: rgb(235, 235, 235);
  overflow: hidden;
  box-sizing: border-box;
  min-height: 100vh;
  background-color: #fff;
  padding-left: 30rpx;
  padding-right: 30rpx;
}
.fk_shops_item{
  display: flex;
  padding: 30rpx 30rpx;
  background-color: #fff;
  border-bottom: 1px solid #ececec;
}
.fk_shops_item{
  display: flex;
  align-items: center;
  box-sizing: border-box;
  justify-content: center;
  flex-direction: row;
  margin-top: 30rpx;
}
.fk_shops_item_right{
  width: 30rpx;
}
.fk_shops_item_left{
  flex: 1;
  display: flex;
}
.fk_shops_item_img{
  width: 140rpx;
  height: 140rpx;
  /* margin-right: 25px; */
  border-radius: 50%;
  background-color: #999999;
}
.fk_shops_item_info{
  flex: 1;
  padding-left: 50rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
}
.fk_shops_item_info_name{
  font-size: 36rpx;
  width: 410rpx;
  word-break: break-all;
 
}
.fk_shops_item_info_opt{
  display: flex;
  align-items: center;
}
.fk_shops_item_info_opt_icon{
  font-size: 32rpx;
  color: yellow;
}
.fk_shops_item_info_opt_text{
  font-size: 24rpx;
}

.fk_shops_item_right_icon::after{
  font-family: "iconfont" !important;
  content: "\e609";
  width: 30rpx;
  height: 100%;
  color: #8c8c8c;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  text-align: center;
  /* margin-right: 10px; */
}
.fk_shop_banner{
  background-image: -moz-linear-gradient( 90deg, rgb(1,215,254) 0%, rgb(1,178,255) 100%);
  background-image: -webkit-linear-gradient( 90deg, rgb(1,215,254) 0%, rgb(1,178,255) 100%);
  background-image: -ms-linear-gradient( 90deg, rgb(1,215,254) 0%, rgb(1,178,255) 100%);
  color: #fff;
  font-size: 30rpx;
  padding: 30rpx 0;
  text-align: center;
}